# Pendle Yield Navigator - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# Application
# =============================================================================
NEXT_PUBLIC_APP_NAME="Pendle Yield Navigator"
NEXT_PUBLIC_APP_VERSION="0.1.0"

# =============================================================================
# Network Configuration
# =============================================================================
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_RPC_URL=https://mainnet.base.org

# =============================================================================
# REQUIRED: WalletConnect
# Get your project ID from https://cloud.walletconnect.com/
# =============================================================================
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# =============================================================================
# REQUIRED: Octav API
# Contact Octav for API access: https://octav.fi/
# =============================================================================
OCTAV_API_KEY=your_octav_api_key

# =============================================================================
# OPTIONAL: 1inch API
# Get your API key from https://portal.1inch.dev/
# Required for swap functionality
# =============================================================================
ONEINCH_API_KEY=your_1inch_api_key

# =============================================================================
# OPTIONAL: X402 Agent API
# For AI-powered strategy recommendations
# =============================================================================
X402_API_KEY=your_x402_api_key

# =============================================================================
# Pendle Configuration (Optional - defaults are used if not set)
# =============================================================================
# NEXT_PUBLIC_PENDLE_ROUTER_ADDRESS=0x...
# NEXT_PUBLIC_PENDLE_ORACLE_ADDRESS=0x...

# =============================================================================
# Feature Flags
# =============================================================================
NEXT_PUBLIC_ENABLE_AUTO_ROLL=false
NEXT_PUBLIC_ENABLE_REBALANCE=false
